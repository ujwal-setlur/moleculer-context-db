{
  "name": "moleculer-context-db",
  "version": "1.3.1",
  "description": "A database tool for providing the database session as part of the context",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rm -rf lib",
    "build": "tsc -p src/tsconfig.json",
    "lint": "eslint \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "format": "prettier --write \"{src,{tests,mocks}}/**/*.{js,ts}\"",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "test": "jest --coverage --runInBand --no-cache",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bytetechnology/moleculer-context-db.git"
  },
  "keywords": [
    "moleculer",
    "microservices",
    "database",
    "session",
    "transaction"
  ],
  "author": "Ujwal Setlur",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bytetechnology/moleculer-context-db/issues"
  },
  "homepage": "https://github.com/bytetechnology/moleculer-context-db#readme",
  "peerDependencies": {
    "@mikro-orm/core": "^5.1.4",
    "moleculer": "^0.14.21"
  },
  "devDependencies": {
    "@mikro-orm/core": "^5.1.4",
    "@mikro-orm/mongodb": "^5.1.4",
    "@mikro-orm/sqlite": "^5.1.4",
    "@types/jest": "^27.5.1",
    "@types/mongodb": "^4.0.6",
    "@types/node": "^17.0.35",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^28.1.0",
    "moleculer": "^0.14.21",
    "moleculer-decorators": "^1.3.0",
    "mongodb-memory-server": "^8.6.0",
    "prettier": "^2.6.2",
    "reflect-metadata": "^0.1.13",
    "ts-jest": "^28.0.3",
    "ts-node": "^10.8.0",
    "typescript": "~4.6.0",
    "uuid": "^8.3.2"
  },
  "config": {
    "mongodbMemoryServer": {
      "version": "4.4.1"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "rootDir": ".",
    "coverageDirectory": "tests/coverage",
    "testTimeout": 30000,
    "roots": [
      "tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".*\\.(test|spec).(ts|js)$",
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "setupFiles": [
      "./tests/setup.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
